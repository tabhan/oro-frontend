{% block _search_title_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' category-title'
    }) %}
    {%- if category_title is defined and category_title is not empty -%}
        {% set text = 'oro.product.search.search_in_category.title'|trans({'%count%': text|length, '%text%': text, '%category%': category_title}) %}
    {%- else -%}
        {% set text = 'oro.product.search.search_title.title'|trans({'%count%': text|length, '%text%': text}) %}
    {%- endif -%}
    <h1 {{ block('block_attributes') }}>
        {{- block_widget(block, {text}) -}}
    </h1>
{% endblock %}
